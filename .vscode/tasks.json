{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "C://msys64//ucrt64//bin//g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				// "*.cpp",
				// "*.c"
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				// "${fileDirname}\\a.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: \"D:\\MIN\\bin\\g++.exe\""
		}
	]
}